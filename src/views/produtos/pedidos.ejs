<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carrinho</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">

  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/bf7e05c402.js" crossorigin="anonymous"></script>
</head>

<body id="area-carrinho">
  <%- include("../partials/header.ejs")%>
    <main>
      <br>
      <section class="col-md-10 mx-auto m-0" id="area-home">
        <div class="container">
          <h3>Produto e Frete</h3>
          <div class="row">
            <section id="area-endereco" class="col-md-12">
              <h4> <i class="fas fa-map-marker-alt"></i> SELECIONE O ENDEREÇO</h4>
              <h5>Endereço Principal</h5>
              <p>Av. Otacílio de Azevedo</p>
              <p>Número : 1000</p>
              <p>CEP: 5200-0000 - Recife-Pe</p>
              <button type="button" class="btn btn-primary">Novo endereço</button>
              <button type="button" class="btn btn-danger">Editar</button>
            </section>
          </div>
        </div>
        <div class="container">
          <div class="row">
            <section id="area-cards" class="col-md-12 mx-auto m-0">
              <div class="row row-cols-1 row-cols-md-3 g-5">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                  <% products.forEach(product=> { %>
                    <div class="col mb-2" style="min-width:230px;max-width:230px;">
                      <div id="area-card-produtos" class="card">
                        <div id="area-card-produtos" class="card">
                          <a href="/produtos/<%= product.id %>/pedidoId">
                            <img id="img-card" src="<%= product.image %>" class="img" alt="..."></a>
                          <div class="card-body">
                            <div id="card-text">
                              <p id="text-card" class="card-text">
                                <%= product.title %>
                              </p>
                            </div>
                            <h5 id="card-value" class="card-title">
                              <span>R$
                                <%= product.value %>
                              </span>
                            </h5>
                            <a href="/produtos/pedidos/<%= product.id %>/remover" class="btn btn-danger">Remover</a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% }) %>
                </div>
              </div>
            </section>
          </div>
         
        </div>
        <div class="container">
          <form action="/produtos/carrinho/finalizar" method="POST">
            <button type="submit" class="btn btn-success">Finalizar Compra</button>
          </form>
        </div>   
        <div class="container">
          <div class="row">
            <div id="area-servico" class="col-md-12">
              <h4>SERVIÇOS</h4>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                  Sem garantia
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                <label class="form-check-label" for="flexRadioDefault2">
                  Garantia estendida + 12 meses
                </label>
              </div>
            </div>
          </div>
        </div>
        <div class="container">
          <div class="row">
            <section id="area-endereco" class="col-md-12">
              <h4>FRETE</h4>
              <p>Garantia estendida</p>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1"
                  checked>
                <label class="form-check-label" for="exampleRadios1">
                  <span>GLF</span> - até 8 dias úteis
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                  <span>Dominalog</span> - até 12 dias úteis
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                  <span>Azul</span> - até 3 dias úteis
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                  <span>Sedex</span> - até 6 dias úteis
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                  <span>TMA</span> - até 13 dias úteis
                </label>
              </div>
            </section>
          </div>
        </div>
      </section>
    </main>
    <%- include('../partials/footer') %>
      <!-- JavaScript Bundle with Popper -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>

</body>


</html>